{% extends 'base.twig' %}

{% block title %}Add New History{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold">Add New History</h1>
    <form action="/admin/history/create" method="POST">
        <label for="chapter">Chapter:</label>
        <input type="text" id="chapter" name="chapter" required class="border p-2">

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required class="border p-2">

        <label for="content">Content:</label>
        <textarea id="content" name="content" required class="border p-2"></textarea>

        <button type="submit" class="bg-blue-500 text-white p-2 rounded">Add History</button>
    </form>
{% endblock %}
