{% extends 'base.twig' %}

{% block title %}Admin Login{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold">Admin Login</h1>
    {% if error %}
        <p class="text-red-500">{{ error }}</p>
    {% endif %}
    <form action="/admin/login" method="POST">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required class="border p-2">
        
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required class="border p-2">
        
        <button type="submit" class="bg-blue-500 text-white p-2 rounded">Login</button>
    </form>
{% endblock %}
