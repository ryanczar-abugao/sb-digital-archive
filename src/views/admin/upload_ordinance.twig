{% extends 'base.twig' %}

{% block title %}Upload New Ordinance{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold">Upload New Ordinance</h1>
    <form action="/admin/ordinances/upload" method="POST" enctype="multipart/form-data">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required class="border p-2">

        <label for="authors">Authors:</label>
        <input type="text" id="authors" name="authors" required class="border p-2">

        <label for="file">File:</label>
        <input type="file" id="file" name="file" required class="border p-2">

        <button type="submit" class="bg-blue-500 text-white p-2 rounded">Upload Ordinance</button>
    </form>
{% endblock %}
