{% extends '/admin/base.twig' %}

{% block title %}Admin Login
{% endblock %}

{% block content %}
	<div class="p-4 grid grid-cols-3 h-[calc(100vh-152px)] md:h-[calc(100vh-112px)]">

		<div class="col-span-1"></div>
		<div class="col-span-3 md:col-span-1 flex items-center">
			<div class="{{ css.loginForm }}">
				<h1 class="text-4xl font-bold mb-8">Login</h1>

				{% if error %}
					<div class="bg-red-100 p-2 rounded mb-3">
						<p class="text-red-500">{{ error }}</p>
					</div>
				{% endif %}

				<form action="/admin/login" method="POST">
					<div class="grid grid-cols-1 gap-3 mb-5">
						<label for="username">Username:</label>
						<input type="text" id="username" name="username" class="{{ css.inputText }}" required>

						<label for="password">Password:</label>
						<input type="password" id="password" name="password" class="{{ css.inputText }}" required>
					</div>

					<button type="submit" class="{{ css.loginBtn }}">Login</button>
				</form>
			</div>
		</div>
		<div class="col-span-1"></div>
	</div>
{% endblock %}
