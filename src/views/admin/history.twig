{% extends 'base.twig' %}

{% block title %}Manage History{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold">History Management</h1>
    
    <form action="/admin/history" method="POST">
        <input type="hidden" name="historyId" value="{{ history.historyId ?? '' }}">
        
        <label for="chapter">Chapter:</label>
        <input type="text" id="chapter" name="chapter" required class="border p-2" value="{{ history.chapter ?? '' }}">
        
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required class="border p-2" value="{{ history.title ?? '' }}">
        
        <label for="content">Content:</label>
        <textarea id="content" name="content" required class="border p-2">{{ history.content ?? '' }}</textarea>
        
        <button type="submit" class="bg-blue-500 text-white p-2 rounded">Save History</button>
    </form>
    
    <h2 class="text-2xl mt-4">Existing History Entries</h2>
    <ul>
        {% for history in histories %}
            <li>
                {{ history.title }} 
                <a href="/admin/history/{{ history.historyId }}/edit">Edit</a> | 
                <a href="/admin/history/{{ history.historyId }}/delete">Delete</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
