{% extends 'base.twig' %}

{% block title %}Update History Event{% endblock %}

{% block content %}
    <h1>Update History Event</h1>
    <form action="/admin/history/update/{{ history.id }}" method="POST">
        <label for="event">Event:</label>
        <input type="text" id="event" name="event" value="{{ history.event }}" required>
        
        <label for="description">Description:</label>
        <textarea id="description" name="description" required>{{ history.description }}</textarea>
        
        <button type="submit">Update</button>
    </form>
{% endblock %}
