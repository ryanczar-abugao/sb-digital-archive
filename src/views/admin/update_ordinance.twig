{% extends 'base.twig' %}

{% block title %}Update Ordinance{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold">Update Ordinance</h1>
    <form action="/ordinances/update/{{ ordinance.id }}" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{ ordinance.title }}" required class="border p-2">
        
        <label for="content">Content:</label>
        <textarea id="content" name="content" required class="border p-2">{{ ordinance.content }}</textarea>
        
        <button type="submit" class="bg-blue-500 text-white p-2 rounded">Update</button>
    </form>
{% endblock %}
