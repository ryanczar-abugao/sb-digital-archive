{% extends 'base.twig' %}

{% block title %}Create Ordinance{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold">Create Ordinance</h1>
    <form action="/ordinances/create" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required class="border p-2">
        
        <label for="content">Content:</label>
        <textarea id="content" name="content" required class="border p-2"></textarea>
        
        <button type="submit" class="bg-blue-500 text-white p-2 rounded">Create</button>
    </form>
{% endblock %}
